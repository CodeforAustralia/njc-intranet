    .row
      .col-xs-12
        input.form-control.search-field(type='text', placeholder='Search for a document, staff member or general information', ng-model='vm.search_filter', ng-change='vm.filter()')
  main
    .page(ui-view)
  footer.global-footer
    .container
      .row
        .col-xs-12
