doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='icon', href='/intranet-static/favicon.ico')
    link(rel="stylesheet", href='https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css')
    if !env || env === 'development'
      script(type="text/javascript", src="http://localhost:8080/build/bundle.js")
    else
      script(type="text/javascript", src="/intranet-static/build/bundle.js")

    link(rel="stylesheet/less", type="text/css", href='/intranet-static/less/app.less')
    script(type="text/javascript", src="https://cdnjs.cloudflare.com/ajax/libs/less.js/2.5.3/less.min.js")
  body.njc.njc-intranet
    .wrapper(ng-app="njcIntranetApp", ng-cloak)
      block content
